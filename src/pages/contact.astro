---
import Base from "@/layouts/Base.astro";
import FormField from "@/components/FormField.astro";
---
<Base title="rhyses pieces | contact">
  <h1>Contact me</h1>
  <p>You can find me at my socials here: </p>
  <ul>
    <li><a href="https://github.com/rhyses-pieces" target="_blank" rel="noopener noreferrer">GitHub</a></li>
    <li><a href="https://www.linkedin.com/in/irene-kim-1a8079115/" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
  </ul>

  <p>... or you can: </p>

  <h2>Send me a message</h2>
  <form id="contact" action="#" method="post">
    <label for="name">
      Name
      <FormField el="input" type="text" name="name" id="name" aria-describedby="name-help" required />
    </label>
    <small class="error" id="name-help">Name is required.</small>
    <label for="email">
      Email
      <FormField el="input" type="email" name="email" id="email" aria-describedby="email-help" required />
    </label>
    <small class="error" id="email-help">Email is required, and should be formatted as an email.</small>
    <label for="message">
      Message
      <FormField el="textarea" rows="10" aria-describedby="message-help" required />
    </label>
    <small class="error" id="message-help">Message is required.</small>
    <input type="hidden" name="_gotcha" tabindex="-1" autocomplete="off" style="display:none" />
    <button type="submit">Send</button>
  </form>
</Base>

<style>
  form {
    display: flex;
    flex-flow: column;
    
    & label {
      display: flex;
      flex-flow: inherit;
      gap: 0.5rem;
    }

    & [id$="-help"] {
      opacity: 0.95;
      margin: 0.5rem 0 1rem 0;
    }

    & button {
      width: min-content;
      align-self: center;
      font-size: 2rem;
    }
  }
</style>