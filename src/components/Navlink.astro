---
import type { TransitionAnimationPair, TransitionDirectionalAnimations } from 'astro';

interface Props {
  index: number;
  name: string;
  slug: string;
};

const { index, name, slug } = Astro.props;

const anim: TransitionAnimationPair = {
  old: {
    name: "slideOut",
    duration: "0.4s",
    easing: "ease-out",
    fillMode: "forwards",
  },
  new: {
    name: "slideIn",
    duration: "0.4s",
    delay: `${index * 0.1 + 0.1}s`,
    easing: "ease-in",
    fillMode: "backwards",
  }
};

const horizontalSlide: TransitionDirectionalAnimations = {
  forwards: anim,
  backwards: anim,
}
---
<li transition:animate={horizontalSlide}><a href={slug}>{name}</a></li>

<style>
  li a {
    padding: 0.25rem 0.5rem;
    font-size: 1.25rem;
    color: var(--text-on-secondary);

    &:hover {
      color: var(--text-on-primary);
      background-color: var(--primary);
      text-decoration-color: var(--text-on-primary);
    }
    &:active { 
      color: var(--text-on-secondary);
      background-color: transparent; 
    }

    @media screen and (max-width: 800px) {
      display: block;
    }
  }

@keyframes slideIn {
  from {
    transform: translateX(20%);
    opacity: 0;
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideOut {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    opacity: 0;
    transform: translateX(-20%);
  }
}
</style>